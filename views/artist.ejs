<%- include('partials/header') -%>
    <div class="header">
        <nav>
            <ul class="link-wrap">
                <li>
                    <a class="link" href="/profile"> Add New Artist</a>

                </li>
                <span></span>
                <li>
                    <a class="link" href="/favorite"> favorite's</a>

