<%- include('partials/header') -%>
    <div class="header">
        <nav>
            <ul class="link-wrap">
                <li>
                    <a class="link" href="/"> Add-New-Artist</a>

                </li>
                <span></span>
                <li>
                    <a class="link" href="/artist"> View-All-Artist</a>

                </li>
            </ul>
        </nav>
    </div>
    <section>

        <video autoplay loop muted plays-inline height="2000px" class="background-video">
            <source src="video/Dreamville_Sacrifice.mp4" type="video/mp4">
            </video>

         <div class="display display-favorite">
            <!-- showing most favorite artist i.e if the num of favorite > 10 -->
             <h1>Most <i class="fa-regular fa-heart love" style="color: #07e3f2;"></i> Artist's</h1>
             <ul class="artist-info" id="artist-info">
                <% if (artists && artists.length) { %>
                 <% for (var i = 0; i < artists.length; i++) { %>
                    <% if (artists[i].favorite) { %>
                <li class="artist" data-id="<%= artists[i]._id %>">
                    <img src="<%- artists[i].image || '/default-image.png' %>" alt="<%= artists[i].stageName || 'No Image' %>">
                    <div class="details">
                        <span class="list_stage-name">Stage Name: <%= artists[i].stageName || 'Unknown' %></span>
                        <span class="list_artist-name">Artist Name: <%= artists[i].birthName || 'Unknown' %></span>
                        <span>Age: <%= artists[i].age || 'Unknown' %></span>
                        <div class="icons">
                               <div class="favorite">
                                <span>Hearts:<%= artists[i].favorite%></span>
                            </div>
                        </div>    

                         <div class="delete">

                         <span id="delete">DELETE ARTIST</span>
                        <form
                        action="/artist/deleteArtist/<%= artists[i]._id %>?_method=DELETE"
                        method="POST"
                        class=""
                      >
                        <button class="" type="submit">   <i class="fa-solid fa-trash-can" style="color: #ff0404;"></i></button>
                      </form>
                     
                        <!-- <div class="favorite">
                            <span><%= artists[i].favorite || 0 %></span>
                            <form
                            action="/artist/favoriteArtist/<%= artists[i]._id %>?_method=PUT"
                            method="POST"
                            class=""
                          >
                            <button class="" type="submit"> <i class="fa-regular fa-heart love" style="color: #07e3f2;"></i></button>
                          </form>
                            -->
                        </div>
                    </div>
               
                </li>
                <% } %>
                <% } %>
                     <% } else { %>
                        <p>No artist yet üòí,  <a href="/artist">clicküòç</a> To add a artist to favorites.</p>
                    <% } %>
            </ul>
        
         </div>  

    </section>

    <%- include('partials/footer') -%>
